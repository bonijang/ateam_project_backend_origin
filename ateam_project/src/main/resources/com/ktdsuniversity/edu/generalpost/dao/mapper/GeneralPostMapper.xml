	<insert id="createNewBoard"
			parameterType="com.ktdsuniversity.edu.generalpost.vo.GenaralPostVO">
		INSERT INTO GENERAL_POST 
			(GENERAL_POST_ID
			, POST_WRITER_ID
			, BOARD_ID
			, POST_TITLE
			, POST_CONTENT
			, POST_DATE
			, LIKE_CNT
			, VIEW_CNT
			, DELETE_YN) 
		VALUES 
		 (SEQ_GENERAL_POST_PK.NEXTVAL
	        , #{postWriterId}
			, #{boardId} 
			, #{postTitle}
			, #{postContent}
			, #{postDate}
			, 0
			, 0
			, #{deleteYn} )
	</insert>
	
	<select id="getBoardAllCount"
			resultType="_int">
		SELECT COUNT(1)
		  FROM GENERALPOST GP
		 INNER JOIN MEMBERS M
		    ON GP.EMAIL = M.EMAIL
	</select>
	
